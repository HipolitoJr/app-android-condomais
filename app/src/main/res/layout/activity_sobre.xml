<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.SobreActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Este aplicativo foi desenvolvido para fins acadêmicos. Seu intuito é realizar gerenciamento e controle de despesas de um condomínio."
            android:gravity="center"/>
        <ImageView
            android:layout_weight="2"
            android:src="@drawable/ic_condomais_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:text="CONDOMAIS"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:text="Versão 1.0.0"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

</LinearLayout>
